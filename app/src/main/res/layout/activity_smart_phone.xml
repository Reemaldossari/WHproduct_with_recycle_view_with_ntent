<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartPhoneActivity">

    <ImageView
        android:id="@+id/phone_image_smartPhone_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iphone" />

    <TextView
        android:id="@+id/phone_name_smartphone_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="@+id/phone_image_smartPhone_activity"
        app:layout_constraintTop_toBottomOf="@+id/phone_image_smartPhone_activity" />

    <TextView
        android:id="@+id/phone_price_smartPhone_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintStart_toStartOf="@+id/phone_name_smartphone_activity"
        app:layout_constraintTop_toBottomOf="@+id/phone_name_smartphone_activity" />

    <Button
        android:id="@+id/go_to_phone_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="More Details"
        app:layout_constraintBottom_toBottomOf="@+id/phone_price_smartPhone_activity"
        app:layout_constraintEnd_toEndOf="@+id/phone_image_smartPhone_activity"
        app:layout_constraintTop_toTopOf="@+id/phone_price_smartPhone_activity" />
</androidx.constraintlayout.widget.ConstraintLayout>